<%- include("partials/header") -%>

<section class="vh-100">
    <div class="container py-5 h-100">
      <div class="row d-flex align-items-center justify-content-center h-100">
        <div class="col-md-8 col-lg-7 col-xl-6">
          <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg" class="img-fluid" alt="Phone image">
        </div>
        <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
          <form action="/login" method="post">
            <!-- Email input -->
            <div class="form-outline mb-4">
              <input placeholder="Enter Email-ID" type="email" id="form1Example13" name="email" class="form-control form-control-lg" />
             
            </div>
  
            <!-- Password input -->
            <div class="form-outline mb-4">
              <input placeholder="Enter Password" type="password" id="form1Example23" name="password" class="form-control form-control-lg" />
            
            </div>
  
            <div class="d-flex justify-content-around align-items-center mb-4">
              <!-- Checkbox -->
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value=""
                  id="form1Example3"
                  checked
                />
                <label class="form-check-label" for="form1Example3"> Remember me </label>
              </div>
              <a href="#!">Forgot password?</a>
            </div>
  
            <!-- Submit button -->
           
            
            <div  class="d-grid gap-2 col-12 mx-auto">
                <button  type="submit" class="btn btn-primary btn-lg btn-block ">Sign in</button>
  
                
              </div>
              <p style="display: flex;justify-content: center;margin-top: 2%;">Don't have an account?<a href="/Register">Sign Up</a></p>

         
          </form>
        </div>
      </div> 
    </div>
  </section>

</body>


</html>